<!DOCTYPE html>
<html lang="en">

<head>
{{>headerlinks}}
</head>

<body>
  <!-- Navbar -->
  {{>navbar}}

  <!-- Main Area -->
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="main_content">
            <form class="temp_form">
                <div class="form-group">
                    <label>Enter City Name</label>
                    <input type="text" id="cityName" class="form-control form-control-lg" placeholder="Enter Your City Name" autocomplete="off">
                    <input type="submit" class="btn btn-primary btn-lg btn-block mt-3 shadow" value="search" id="submitBtn">
                </div>
            </form>
        </div>

        <div class="tempInfo">
            <div class="top_layer">
                <p id="day"></p>
                <p id="today_date">08, NOV</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Output Will Be Shown Here</p>
                <div class="middle_layer data_hide">
                    <p id="temp" class="mt-3"><span class="temp_real_value">0</span><sup>o</sup> C</p>
                    <p id="temp_status"></p>
                </div>
            </div>
        </div>



      </div>
    </div>
  </div>

  <!-- Footer -->
  {{>footer}}

  <!-- Bootstrao JS -->
  <script src="./js/jquery.js"></script>
  <script src="./js/bootstrap.js"></script>
  {{!-- Custom JS --}}
  <script src="./js/main.js"></script>
  {{!-- Date and Time --}}
  <script>
      const day = document.getElementById('day')
      const date = document.getElementById('today_date')

      let currentday = new Date();
      let months = ["January","February","March","April","May","June","July","August","September","October","November","December"];
      let weekDays = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

      day.innerHTML = weekDays[currentday.getDay()];
      date.innerHTML =` ${currentday.getDate()}, ${months[currentday.getMonth()]}`;
      console.log(currentday);
  </script>
</body>

</html>
