<!DOCTYPE html>
<html lang="en">

<head>
{{>headerlinks}}
</head>

<body>
  <!-- Navbar -->
  {{>navbar}}

  <!-- Main Area -->
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row">
          <div class="col-md-6 col-12 main_header_left">
            <p>Welcome to WeatherPedia!</p>
            <h1 class="text-capitalize">
              Get the latest <span class="text-primary">weather</span> of your
              city!
            </h1>
            <a href="/weather"><button class="btn btn-primary btn-lg mt-4">
                Check Weather Now <i class="fa fa-arrow-right"></i></button></a>
          </div>
          <div class="col-md-6 col-12 main_header_right">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="./images/undraw_season_change_f99v.png" class="w-100" alt="Image" />
                </div>
                <div class="carousel-item">
                  <img src="./images/undraw_weather_notification_4sbo.png" class="w-100" alt="Image" />
                </div>
                <div class="carousel-item">
                  <img src="./images/undraw_Weather_re_qsmd.png" class="w-100" alt="Image" />
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  {{>footer}}

  <!-- Bootstrao JS -->
  <script src="./js/jquery.js"></script>
  <script src="./js/bootstrap.js"></script>
</body>

</html>